<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 


<hibernate-mapping>
   <class name="com.fh.Reservation" table="reservation">
      <meta attribute="class-description">
         This class contains the passenger detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="pnr" column="pnr" type="string"/>
      <property name="username" column="username" type="string"/>
      <property name="flight_no" column="flight_no" type="string"/>
      <property name="no_of_tickets" column="no_of_tickets" type="int"/>
      <property name="price" column="price" type="double"/>
   </class>
</hibernate-mapping>